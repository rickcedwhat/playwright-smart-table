{
  "name": "@rickcedwhat/playwright-smart-table",
  "version": "2.1.3",
  "description": "A smart table utility for Playwright with built-in pagination strategies that are fully extensible.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rickcedwhat/playwright-smart-table.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "generate-types": "node scripts/embed-types.mjs",
    "generate-docs": "node scripts/generate-readme.mjs",
    "build": "npm run generate-types && npm run generate-docs && tsc",
    "prepublishOnly": "npm run build",
    "test": "npx playwright test",
    "test:compatibility": "npx playwright test compatibility",
    "prepare": "husky install"
  },
  "keywords": [
    "playwright",
    "testing",
    "table",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "@playwright/test": "*"
  },
  "peerDependenciesMeta": {
    "@playwright/test": {
      "optional": true
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "husky": "^8.0.0"
  }
}